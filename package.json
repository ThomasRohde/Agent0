{
  "name": "a0-lang",
  "version": "0.3.5",
  "private": true,
  "type": "module",
  "description": "A0: Agent-Optimized General-Purpose CLI Interpreter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/core && npm run build -w packages/std -w packages/tools && npm run build -w packages/cli",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "version:sync": "node scripts/sync-versions.js"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  }
}
